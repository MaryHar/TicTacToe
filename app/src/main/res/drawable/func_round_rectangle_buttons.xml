<?xml version="1.0" encoding="UTF-8"?>

    <selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false"
        android:state_pressed="false">
    <shape android:useLevel="false"
        android:shape="rectangle">
    <corners android:radius="20dp"/>
    <padding android:bottom="3dp"
        android:right="3dp"
        android:top="5dp"
        android:left="5dp"/>

    <gradient android:type="linear"
        android:endColor="#2B4AF4"
        android:startColor="#020A29"
        android:centerColor="#2B4AF4"
        android:centerY="0.5"
        android:centerX="0.5"
        android:angle="70"/>
</shape>
</item>
    <item android:state_focused="true"
        android:state_pressed="false">
    <shape android:useLevel="false"
        android:shape="rectangle">
    <corners android:radius="7dp"/>
    <padding android:bottom="3dp"
        android:right="3dp"
        android:top="5dp"
        android:left="5dp"/>

</shape>
</item>
    <item android:state_focused="false"
        android:state_pressed="true">


    <shape android:useLevel="false"
        android:shape="rectangle">

    <corners android:radius="7dp"/>

        <gradient android:type="linear"
            android:endColor="#2B4AF4"
            android:startColor="#020A29"
            android:centerColor="#08205C"
            android:centerY="0.5"
            android:centerX="0.5"
            android:angle="70"/>

    <stroke android:color="#000000"
        android:width="1dp"/>

    <padding android:bottom="3dp"
        android:right="3dp"
        android:top="5dp"
        android:left="5dp"/>
</shape>
</item>
</selector>